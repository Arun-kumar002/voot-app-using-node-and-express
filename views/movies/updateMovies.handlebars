            </div>
            <div>
            <label for="movie-10">movie audio language</label>
            <input type="text" name="movie_audio_lang" id="movie-8" placeholder="movie_audio_lang" value="{{updatemovie.movie_audio_lang}}">
            </div>
            <div>
            <label for="movie-111">movie description</label>
            <textarea name="movie_description"  cols="30" rows="5" placeholder="movie_description" id="movie-11"  >
            </textarea>
            </div>
            <div><button>Update movies</button></div>

        </form>
    </article>
</section>