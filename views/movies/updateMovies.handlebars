            <div>
                <label for="movie-1">movie title</label>
                <input type="text" name="movie_title" id="movie-1" placeholder="movie_title" value="{{updatemovie.movie_title}}">
            </div>
            <div>
                <label for="movie-2">movi duration</label>
                <input type="text" name="movie_duration" id="movie-2" placeholder="movie_duration" value="{{updatemovie.movie_duration}}">
            </div>
            <div>
                <label for="movie-3">movie language</label>
                <input type="text" name="movie_language" id="movie-3" placeholder="movie_language" value="{{updatemovie.movie_language}}">
            </div>
            <div>
                <label for="movie-4">movie genre....</label><input type="text" name="movie_genre" id="movie-4" placeholder="movie_genre" value="{{updatemovie.movie_genre}}">
            </div>
            <div>
                <label for="movie-5">movie year...</label><input type="date" name="movie_year" id="movie-5" placeholder="movie_year" value="{{updatemovie.movie_year}}">
            </div>
            <div>
